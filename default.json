{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "description": "Base Renovate configuration for my repositories.",
  "extends": [
    "config:best-practices"
  ],
  "schedule": [
    "* * 1 * *"
  ],
  "prHourlyLimit": 10,
  "lockFileMaintenance": {
    "schedule": [
      "* * 2,15 * *"
    ]
  },
  "git-submodules": {
    "schedule": [
      "* * 3 * *"
    ],
    "automerge": true,
    "automergeType": "branch"
  },
  "packageRules": [
    {
      "groupName": "All Nix Updates",
      "description": "Group all Nix updates together",
      "groupSlug": "all-nix-updates",
      "schedule": "* * 1 * *",
      "matchManagers": [
        "nix"
      ]
    }
  ]
}