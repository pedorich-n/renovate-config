{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "description": "Base Renovate configuration for my repositories. Runs once a month.",
  "extends": [
    "config:best-practices",
    "schedule:monthly"
  ],
  "baseBranchPatterns": [
    "main",
    "master"
  ],
  "prHourlyLimit": 5,
  "packageRules": [
    {
      "groupName": "Nix Updates",
      "groupSlug": "nix-updates",
      "matchPackageNames": [
        "nixpkgs"
      ],
      "matchUpdateTypes": [
        "digest"
      ]
    }
  ]
}