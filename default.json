{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "description": "Base Renovate configuration for my repositories. Runs once a month.",
  "extends": [
    "config:best-practices",
    "schedule:monthly"
  ],
  "baseBranchPatterns": [
    "main",
    "master"
  ],
  "prHourlyLimit": 5,
  "lockFileMaintenance": {
    "schedule": [
      "* 0-3 1,15 * *"
    ]
  },
  "packageRules": [
    {
      "groupName": "All Nix Updates",
      "description": "Group all Nix updates together",
      "groupSlug": "all-nix-updates",
      "schedule": "monthly",
      "matchManagers": [
        "nix"
      ]
    }
  ]
}